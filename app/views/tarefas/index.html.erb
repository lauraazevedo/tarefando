<h3> Funcionário: <%= @funcionario.nome_completo %> </h3>
<%= link_to "Nova tarefa", new_funcionario_tarefa_url(@funcionario) %>

<table class="table">
  <tr>
    <th>Tarefa</th>
    <th>Descrição</th>
    <th>Status</th>
    <th>Prazo</th>
  </tr>

  <% @tarefas.each do |tarefa| %>
	  <tr>
	    <td><%= tarefa.titulo %> </td>
	    <td><%= tarefa.descricao %></td>
	    <td><%= tarefa.status %></td>
      <td><%= tarefa.prazo %> dias</td>
	</tr>
  <% end %>
</table>
